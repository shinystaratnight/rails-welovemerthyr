<div class="row">
  <div class="well col-lg-8">
    <%= simple_form_for @page_template, html: { class: 'form-horizontal'}, defaults: { input_html: { class: 'form-control' }} do |f| %>
      <div class="form-inputs">
        <%= f.input :title %>
        <%= f.input :body, as: :text, input_html: { class: 'my_tinymce' } -%>
        <%= f.input :layout_name, collection: PageTemplate::LAYOUT_NAMES, include_blank: false, label: 'Layout' -%>
      </div>

      <div class="form-group">
        <div class="col-lg-10 col-lg-offset-2">
          <%= f.button :submit, class: 'btn-primary' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
