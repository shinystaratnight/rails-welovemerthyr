<div class="row">
  <div class="well col-lg-8">
    <%= simple_form_for @event, html: { class: 'form-horizontal'}, defaults: { input_html: { class: 'form-control' }} do |f| %>
      <div class="form-inputs">
        <%= f.input :name %>
        <%= f.input :description, as: :text, input_html: { class: 'my_tinymce' } -%>
        <%#= f.input :starts, as: :datetime, input_html: { class: 'custom_datetime form-control' }, use_short_month: true, order: [:day, :month, :year] -%>
        <%#= f.input :ends, as: :datetime, input_html: { class: 'custom_datetime form-control' }, use_short_month: true, order: [:day, :month, :year] -%>
        <%- default_time = Time.now -%>
        <%= f.input :starts, input_html: { value: (f.object.starts || default_time).strftime("%d-%m-%Y %H:%M") } -%>
        <%= f.input :ends, input_html: { value: (f.object.ends || 1.hour.since(default_time)).strftime("%d-%m-%Y %H:%M") } -%>
        <%= f.input :location_name %>
        <%= f.input :location_address %>
        <div class="form-group">
          <div class="col-lg-10 col-lg-offset-2">
            <label for="event_repeat">Repeat interval</label>
            <%= f.select :repeat, Event.event_repeat_interval %>
          </div>
        </div>

        <%- if @event.image.present? -%>
          <div class="form-group">
            <label class="col-lg-2 control-label"></label>
            <div class="col-lg-10">
              <%= image_tag @event.image_url(:admin_thumb) -%>
            </div>
          </div>

          <div class='form-group'>
            <label class="col-lg-2 control-label" for="event_remove_image"></label>
            <div class="col-lg-10">
              <div class="checkbox">
                <input type="checkbox" id="event_remove_image" name="event[remove_image]" class="boolean optional" value="1" />
                <label for="event_remove_image">Remove image</label>
              </div>
            </div>
          </div>
        <%- end -%>

        <%= f.input :image -%>
        <%= f.input :image_mode, as: :radio_buttons, collection: IMAGE_MODES, include_blank: false, label_method: :capitalize, input_html: { class: 'radio_buttons optional'} -%>
      </div>

      <div class="form-group">
        <div class="col-lg-10 col-lg-offset-2">
          <%= f.button :submit, class: 'btn-primary' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
