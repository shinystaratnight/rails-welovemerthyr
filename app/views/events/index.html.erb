<h1>Listing events</h1>

<p> <%= link_to 'New Event', new_event_path %> </p>

<table class="table table-condensed table-bordered table-hover table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Starts</th>
      <th>Ends</th>
      <th>Location name</th>
      <th>Location address</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Image</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.starts.strftime("%b #{event.starts.day.ordinalize}, %-I:%M%P") %></td>
        <td><%= event.ends.strftime("%b #{event.ends.day.ordinalize}, %-I:%M%P") %></td>
        <td><%= event.location_name %></td>
        <td><%= event.location_address %></td>
        <td><%= event.lat%></td>
        <td><%= event.lon%></td>
        <td><%= image_tag(event.image_url(:admin_thumb)) if event.image.present? %></td>
        <td>
          <%= link_to 'Show', event %>
          <%= link_to 'Edit', edit_event_path(event) %>
          <%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @events -%>
