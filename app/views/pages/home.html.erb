<div class="row">
  <div class="col-lg-8">
    <div id="iview">
      <%- sliders = Slider.all -%>
      <%- sliders.each_with_index do |slider, index| -%>
        <div data-iview:thumbnail="<%= slider.image_url(:thumb) -%>" data-iview:image="<%= slider.image_url(:thumb) -%>" data-iview:transition="block-drop-random">
          <div class="iview-caption caption<%= index + 1 -%>" data-x="0" data-y="100" data-transition="expandRight"><%= slider.caption -%></div>
        </div>
      <%- end -%>
    </div>
  </div>
  <div class="col-lg-4">
    <div class="palette palette-success">
      <div class="home_banner">
        <h1>There's something for everyone in Merthyr Tydfil Town Centre</h1>
        <a href="#"><img src="/assets/img/take_look_here.png" alt="" /></a>
        <div class="clearfix"></div>
      </div>
    </div>
  </div>
</div>

<div class="row home_latest_post_block">
  <!-- QUICK LINKS -->
  <div class="col-lg-3">
    <div class="panel equalHeights">
         <div class="palette palette-info" >Quick Links</div>
         <div class="list-group quick_links">
           <a href="#" class="list-group-item btn-primary car1">How to get here</a>
           <a href="#" class="list-group-item btn-primary car2">Parking Information</a>
           <a href="#" class="list-group-item btn-primary marker">Download our guide</a>
         </div>
      </div>
  </div>

  <!-- EVENTS -->
  <div class="col-lg-3">
    <div class="panel equalHeights">
         <div class=" palette palette-alizarin" >Upcoming Events</div>
         <div class="list-group upcoming_events">
           <%- Event.upcoming(4).each do |e| -%>
             <%= link_to event_path(e), class: 'list-group-item' do -%>
                <span class="glyphicon glyphicon-calendar"></span>
                <div class="col-md-10">
                  <span class="title"><%= e.name -%></span>
                  <span class="desc"><%= e.starts.strftime("%a %d %B %Y, %H%P")-%></span>
                </div>
             <%- end -%>
           <%- end -%>
         </div>
      </div>
      <%= link_to 'More events', events_path, class: 'btn btn-s btn-danger pull-right' -%>
      <div class="clearfix"></div>
  </div>

  <!-- VOUCHERS -->
  <div class="col-lg-3">
    <div class="panel equalHeights">
         <div class=" palette palette-success" >Latest Vouchers</div>
         <div class="list-group latest_vouchers">
           <%- Deal.latest(3).each do |d| -%>
             <%= link_to deal_path(d), class: 'list-group-item' do -%>
               <span class="glyphicon glyphicon-pound"></span>
               <div class="col-md-10">
                 <span class="title"><%= d.title -%></span>
                 <span class="desc">at <%= d.business_name -%></span>
               </div>
             <%- end -%>
           <%- end -%>
         </div>
      </div>
      <%= link_to 'More vouchers', deals_path, class: 'btn btn-s btn-success pull-right' -%>
      <div class="clearfix"></div>
  </div>

  <!-- POSTS -->
  <div class="col-lg-3">
    <div class="panel equalHeights">
         <div class="palette palette-concrete" >Latest Blog Posts</div>
         <div class="list-group latest_blog_posts">
           <%- Post.latest(4).each do |p| -%>
             <%= link_to post_path(p), class: 'list-group-item' do -%>
               <span class="glyphicon glyphicon-book"></span>
               <div class="col-md-10">
                 <span class="title"><%= p.title -%></span>
               </div>
             <%- end -%>
           <%- end -%>
         </div>
      </div>
      <%= link_to 'More blog posts', posts_path, class: 'btn btn-s btn-link pull-right' -%>
      <div class="clearfix"></div>
  </div>
</div>

<hr />

<div class="row">
  <!-- TAGS -->
  <div class="col-lg-9">
    <h2>Just some of the things you can find in Merthyr Tydfil Town Centre</h2>
    <div class="town_centre">
      <%- Business.random_services(30).each do |bs| -%>
        <%= link_to bs[:tag], business_path(bs[:business]), class: 'btn btn-xs btn-primary' -%>
      <%- end -%>
    </div>
    <p class="find">
      Can't find what your looking for or have a query? Contact our customer support assistant <a href="#">here</a>.
    </p>
  </div>

  <div class="col-lg-3">
    <%= render partial: 'shared/sidebar_socials' -%>
  </div>
</div>
</div> <!-- /container -->
