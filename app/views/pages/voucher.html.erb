<%= content_for :bread_crumbs do -%>
  <div class="dow margin_bottom_20">
    <div class="col-lg-8 content">
      <div class="bread_crumbs">
        <%= link_to 'Home', front_path -%> >
        <%= link_to 'Vouchers', public_vouchers_path -%> >
        <%= @deal.title -%>
      </div>
      <h1 class="red title_post"><%= @deal.title -%></h1>
      <div class="post_entry_meta">
        <div class="category underline">
          At <a href="<%= public_business_path(@deal.business) -%>"><%= @deal.business_name -%></a>,
          <%= @deal.business.full_address -%>
        </div>
        <div class="date">
          <span></span><a href="#"><%= @deal.start_date.strftime("%B #{@deal.start_date.day.ordinalize}, %Y") -%></a>
        </div>
      </div>
    </div>

    <div class="col-lg-4">
    </div>
    <div class="clearfix"></div>
  </div>
<%- end -%>

<div class="col-lg-8 content">
  <div class="blog">
        <div class="row">
          <div class="col-xs-12 col-sm-8 col-md-8 col-lg-6 ">
            <%=raw @deal.description -%>

            <h2 class="red">Terms and Conditions</h2>

            <%= @deal.terms -%>

            <br />
            <br />

            <div class="a_center">
              <!--<a href="#voucher_soon" class="btn btn-lg btn-success margin_top_10" data-toggle='modal' data-target='#voucher_soon'>Claim Voucher</a>-->
              <a href="#" class="btn btn-lg btn-success margin_top_10" onclick="alert('To claim this voucher display page on your smart phone or print off and present in store. Our voucher system will be with you soon.'); return false">Claim Voucher</a>
            </div>
          </div >

          <div class="col-xs-12 col-sm-4 col-md-4 col-lg-6 a_center">
            <%- if @deal.image_url(:thumb).present? -%>
              <div class="thumbnail">
                <%= image_tag @deal.image_url(:thumb) -%>
              </div>
            <%- else -%>
              <div class="thumbnail">
                <div style="width:358px;height:273px;background-color:#ccc"></div>
              </div>
            <%- end -%>
          </div>
        </div>
        <div class="social_shared">
          <span class='st_twitter_vcount' displayText='Tweet'></span>
          <span class='st_facebook_vcount' displayText='Facebook'></span>
          <span class='st_googleplus_vcount' displayText='Google +'></span>
          <span class='st_email_vcount' displayText='Email'></span>
        </div>
  </div>
</div>

<div class="col-lg-4 sidebar">
  <div class="widget">
    <h2 class="red">Recent Vouchers</h2>
    <div class="widget_recent_posts widget_recent_vouchers">
      <%- Deal.latest(5).reject { |d| d.id == @deal.id }.each do |d| -%>
        <div class="recent_post">
          <a href="#" class="title"> <%= d.title -%> </a>
          <div class="recent_posts_entry_meta ">
              > Expires: <a href="#"><%= d.end_date.strftime("%B #{d.end_date.day.ordinalize}, %Y") -%></a>
          </div>
        </div>
      <%- end -%>
    </div>
  </div>
  <div class="widget">
    <%= render partial: 'shared/sidebar_socials' -%>
  </div>
</div>

<div id="voucher_soon" class="modal fade hide in">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3>Voucher coming soon</h3>
  </div>

  <div class="modal-body">
    <p> To claim this voucher display page on your smart phone or print off and present in store. </p>
    <p> Our voucher system will be with you soon. </p>
  </div>

  <div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
  </div>
</div>
