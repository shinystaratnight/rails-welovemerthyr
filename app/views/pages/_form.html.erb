<div class="row">
  <div class="well col-lg-8">
    <%= simple_form_for @page, html: { class: 'form-horizontal'}, defaults: { input_html: { class: 'form-control' }} do |f| %>
      <div class="form-inputs">
        <%= f.input :title %>
        <%= f.input :body, as: :ckeditor, input_html: { ckeditor: { toolbar: 'Full' }} %>
        <%= f.input :parent_id, collection: Page.all - [@page], prompt: 'Please select' %>
        <%= f.input :page_template_id, collection: PageTemplate.all, prompt: 'Please select' %>
        <%= f.input :status, collection: Page::STATUSES, prompt: 'Please select' -%>
      </div>

      <div class="form-group">
        <div class="col-lg-10 col-lg-offset-2">
          <%= f.button :submit, class: 'btn-primary' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
