<section class="single-listing light-gray-bg content-padding">
  <div class="row">
    <div class="column">
      <ul class="breadcrumbs">
        <li><a href="index.html"><i class="fa fa-home"></i></a></li>
        <%- if @page.parent.present? -%>
        <li class="show-for-medium"><a href="<%= public_page_show_path(@page.parent.slug) %>"><span><%= @page.parent.title %></span></a></li>
        <%- end -%>
        <li><a href="<%= public_page_show_path(@page.slug) %>"><span><%= @page.title %></span></a></li>
      </ul>
    </div>
  </div>

  <div class="row">
    <div class="small-12 medium-8 column">
      <div class="single-content-wrap">
        <div class="single-content">
          <h1><%= @page.title %></h1>
          <%=raw @page.body -%>
        </div>
      </div>
    </div>

    <div class="small-12 medium-4 column">
      <div class="single-content-wrap">
        <div class="single-content">
       
      <% if current_page?(action: 'the-big-heart-of-merthyr-tydfil') %>
       
          <h2>Downloads</h2>
      <%- else%>
          
          <div class="row columns">
			<div class="latest tertiary">
				<h2 class="card-title">Latest News</h2>
				<div class="card-content" data-equalizer-watch>
					<%= render partial: '/pages/news_item', collection: Post.latest(4) %>
				</div>
					<a href="<%= blog_path %>" class="card-button">More News</a>
			</div>
		</div>
          
      <% end %>   
          
         
          
          
          
          
        </div>

      </div>
    </div>
  </div>

</section>
