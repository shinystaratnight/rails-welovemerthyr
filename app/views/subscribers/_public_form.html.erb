<%= simple_form_for object, url: subsribe_subscribers_path, html: { class: 'form-horizontal'}, defaults: { input_html: { class: 'form-control' }}, remote: true do |f| %>
  <div class="form-inputs">
    <%= f.input :name, input_html: { class: 'col-lg-8' }, label_html: { class: 'col-lg-4'} -%>
    <%= f.input :email -%>
  </div>

  <div class="form-group">
    <div class="col-lg-10 col-lg-offset-2">
      <%= f.button :submit, 'Subscribe', class: 'btn-primary' %>
    </div>
  </div>
<%- end -%>
