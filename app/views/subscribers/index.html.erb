<h1>Listing subscribers</h1>

<p> <%= link_to 'New Subscriber', new_subscriber_path %> </p>

<table class="table table-condensed table-bordered table-hover table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Deal</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @subscribers.each do |subscriber| %>
      <tr>
        <td><%= subscriber.name %></td>
        <td><%= subscriber.email %></td>
        <td><%= subscriber.deal.title %></td>
        <td>
          <%= link_to 'Show', subscriber %>
          <%= link_to 'Edit', edit_subscriber_path(subscriber) %>
          <%= link_to 'Destroy', subscriber, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @subscribers -%>
