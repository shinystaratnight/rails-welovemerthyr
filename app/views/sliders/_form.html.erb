<div class="row animated fadeInRight">
  <div class="col-sm-12">
    <div class="panel">
      <div class="panel-content">
        <div class="row">
          <div class="col-md-12">
            <%= simple_form_for @slider, html: { class: ''}, defaults: { input_html: { class: 'form-control' }} do |f| %>
              <%- if @slider.image.present? -%>
                <div class="form-group">
                  <%= image_tag @slider.image_url(:admin_thumb) -%>
                </div>
                <div class="form-group">
                  <label class="col-lg-2 control-label" for="slider_remove_image"></label>
                  <input type="checkbox" id="slider_remove_image" name="slider[remove_image]" class="boolean optional" value="1" />
                  <label for="slider_remove_image">Remove image</label>
              </div>
              <%end%>


              <div class="form-group">
                <label for="image" class=" control-label">Image<span class="require">*</span></label></br>
                <%= f.input :image, label: false, input_html: { class: 'text-black form-control' } %>
              </div>
              <br>
              <br>
              <div class="form-group">
                <label for="caption" class=" control-label">Caption</label></br>
                <%= f.input :caption, label: false %>
              </div>
              <br>
              <br>
              <div class="form-group">
                <label for="url" class=" control-label">URL</label></br>
                <%= f.input :url, label: false %>
              </div>
              <br>
              <br>
              <div class="form-group">
                
                <%= f.input :visible, as: :boolean, inline_label: 'Visible',label: false, input_html: { class: 'boolean optional'} %>
              </div>
              <br>
              <br>
              <div class="form-group">
                <label for="order" class=" control-label">Order</label></br>
                <%= f.input :order, collection: (1..Slider.count + 1).to_a, include_blank: false, label: false %>
              </div>
              <br>
              <br>
              <div class="form-group">

                <%= f.button :submit, class: 'btn-primary' %>
              </div>
            <%end%>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>