<div class="row">
  <div class="well col-lg-8">
    <%= simple_form_for @slider, html: { class: 'form-horizontal'}, defaults: { input_html: { class: 'form-control' }} do |f| %>
      <div class="form-inputs">
        <%- if @slider.image.present? -%>
          <div class="form-group">
            <label class="col-lg-2 control-label"></label>
            <div class="col-lg-10">
              <%= image_tag @slider.image_url(:admin_thumb) -%>
            </div>
          </div>

          <div class='form-group'>
            <label class="col-lg-2 control-label" for="slider_remove_image"></label>
            <div class="col-lg-10">
              <div class="checkbox">
                <input type="checkbox" id="slider_remove_image" name="slider[remove_image]" class="boolean optional" value="1" />
                <label for="slider_remove_image">Remove image</label>
              </div>
            </div>
          </div>
        <%- end -%>

        <%= f.input :image -%>
        <%= f.input :caption %>
        <%= f.input :url %>
        <%= f.input :order, collection: (1..Slider.count + 1).to_a, include_blank: false %>
      </div>

      <div class="form-group">
        <div class="col-lg-10 col-lg-offset-2">
          <%= f.button :submit, class: 'btn-primary' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
