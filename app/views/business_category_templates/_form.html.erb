<div class="row">
  <div class="well col-lg-8">
    <%= simple_form_for @business_category_template, html: { class: 'form-horizontal'}, defaults: { input_html: { class: 'form-control' }} do |f| %>
      <div class="form-inputs">
        <%= f.input :category, collection: Business::CATEGORIES, include_blank: false, prompt: 'Please select' %>
        <%= f.input :body, as: :text, input_html: { class: 'my_tinymce' } -%>

        <%= f.fields_for :business_category_template_images do |fa| -%>
          <%- if fa.object.persisted? && fa.object.image.present? -%>
            <div class="form-group">
              <label class="col-lg-2 control-label"></label>
              <div class="col-lg-10">
                <%= image_tag fa.object.image_url(:thumb) -%>
              </div>
            </div>
            <%= fa.input :remove_image, as: :boolean, inline_label: 'Remove image', label: "&nbsp;" -%>
          <%- elsif fa.object.new_record? -%>
            <%= fa.input :image, input_html: { class: 'form-control' } -%>
          <%- end -%>
        <%- end -%>
      </div>

      <div class="form-group">
        <div class="col-lg-10 col-lg-offset-2">
          <%= f.button :submit, class: 'btn-primary' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
