<%- downloads = Download.desc(:created_at).desc(:id) -%>

<div class="panel equalHeights">
  <div class="palette palette-success">Downloads</div>
  <div class="row" style="text-align: center; margin: 20px;">
    <!--div class="col-lg-12 download-toggle-wrap">
      <a href="#" class="download-toggle-btn" id="events">Events &amp; Marketing</a>
    </div>
    <div class="col-lg-12 download-toggle-wrap">
      <a href="#" class="download-toggle-btn" id="reports">Reports</a>
    </div>
    <div class="col-lg-12 download-toggle-wrap">
      <a href="#" class="download-toggle-btn" id="newsletters">Newsletters</a>
    </div>
    <div class="col-lg-12 download-toggle-wrap">
      <a href="#" class="download-toggle-btn" id="general">General</a>
    </div-->
    <!--h5 class="red text-center" style="line-height:1.4; text-transform: none">Toggle The Categories With The Buttons Above</h5-->
    <select id="downloads_select">
       <option value="">Select  Category</option>
       <option value="events">Events and Marketing</option>
       <option value="reports">Reports</option>
       <option value="newsletters">Newsletters</option>
       <option value="general">General</option>
    </select>
  </div>


  <div id="downloadlist">
    <div class="scrollbar"><div class="track"><div class="thumb"><div class="end"></div></div></div></div>
    <div class="viewport" style="overflow:scroll">
        <div class="overview">
          <div class="list-group download_links">
            <%- if downloads.any? -%>
              <%- downloads.each do |d| -%>
                <div class="col-md-10">
                  <a href="<%= d.file.url -%>" class="list-group-item <%= !d.category.blank? ? d.category.downcase.tr(" ", '_') : nil -%>">
                    <span class="title"><%= d.title -%></span>
                  </a>
                </div>
              <%- end -%>
            <%- else -%>
              <%= link_to '#', class: 'list-group-item' do -%>
                <div class="col-md-10">
                  <span class="title"> No files. </span>
                </div>
              <%- end -%>
            <%- end -%>
          </div>
        </div>
    </div>
  </div>
</div>
