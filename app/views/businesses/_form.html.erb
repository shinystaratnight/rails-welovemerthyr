<%= simple_form_for @business, html: { class: 'form-horizontal'} do |f| %>
  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :category, collection: Business::CATEGORIES, prompt: 'Please select' %>
    <%= f.input :address %>
    <%= f.input :town, placeholder: Business::DEFAULT_TOWN -%>
    <%= f.input :postcode %>
    <%= f.input :telephone %>
    <%= f.input :website %>
    <%= f.input :email %>
    <%= f.input :twitter %>
    <%= f.input :facebook, as: :boolean %>
    <%= f.input :service_list, as: :text, hint: 'Seperate services with comma' %>
    <%= f.input :profile %>
    <%- if @business.photo.present? -%>
      <%= image_tag @business.photo_url -%>
      <%= f.input :remove_photo, as: :boolean, label: false, inline_label: 'Remove this photo' -%>
    <%- end -%>
    <%= f.input :photo -%>

    <%= f.fields_for :weekly_schedule do |ws| -%>
      <%- WeeklySchedule::DAYS.each do |day| -%>
        <%= ws.input "#{day}_opening", required: false -%>
        <%= ws.input "#{day}_closing", required: false -%>
      <%- end -%>
    <%- end -%>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
