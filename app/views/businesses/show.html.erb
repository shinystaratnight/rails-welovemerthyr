<h4>
  Invite users <small>(type email to match)</small>
</h4>
<%= form_tag invite_business_path(@business) do -%>
  <div class='form-group'>
    <%= select_tag :user_ids, options_from_collection_for_select(User.all, 'id', 'email'), multiple: true, name: 'user_ids[]' -%>
  </div>

  <div class='form-group'>
    <%= submit_tag 'Invite', class: 'btn btn-primary' -%>
  </div>
<%- end -%>

<p>
  <b>Name:</b>
  <%= @business.name %>
</p>

<p>
  <b>Category:</b>
  <%= @business.category %>
</p>

<p>
  <b>Contact:</b>
  <%= @business.contact %>
</p>

<p>
  <b>Address:</b>
  <%= @business.address %>
</p>

<p>
  <b>Town:</b>
  <%= @business.town %>
</p>

<p>
  <b>Postcode:</b>
  <%= @business.postcode %>
</p>

<p>
  <b>Telephone:</b>
  <%= @business.telephone %>
</p>

<p>
  <b>Website:</b>
  <%= @business.website %>
</p>

<p>
  <b>Email:</b>
  <%= @business.email %>
</p>

<p>
  <b>Twitter:</b>
  <%= @business.twitter %>
</p>

<p>
  <b>Facebook:</b>
  <%= @business.facebook %>
</p>

<p>
  <b>Services:</b>
  <%= @business.services %>
</p>

<p>
  <b>Profile:</b>
  <%=sanitize @business.profile %>
</p>

<p>
  <b>Photo:</b>
  <%= image_tag(@business.photo_url) if @business.photo.present? %>
</p>

<p>
  <b>Lat/Lon:</b>
  <%= @business.lat -%> / <%= @business.lon -%>
</p>

<p>
  <%- Business::DAYS.each do |day| -%>
    <%= "#{day.capitalize} opening: #{@business.send("#{day}_opening")}" -%>
    <br />
    <%= "#{day.capitalize} closing: #{@business.send("#{day}_closing")}" -%>
    <br />
  <%- end -%>
</p>

<%= link_to 'Create Deal', new_deal_path(business_id: @business.id), class: 'btn btn-primary' -%>
<br />
<br />
<%= link_to 'Edit', edit_business_path(@business) %> |
<%= link_to 'Back', businesses_path %>
