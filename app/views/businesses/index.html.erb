<div class="content">
  <!-- content HEADER -->
  <!-- ========================================================= -->
  <div class="content-header">
    <!-- leftside content header -->
    <div class="leftside-content-header">
      <ul class="breadcrumbs">
        <li><i class="fa fa-columns" aria-hidden="true"></i><a href="#">Businesses</a></li>
      </ul>
    </div>
  </div>
  <div class="row animated fadeInRight">
    <div class="col-sm-12">
      <h1>Listing businesses</h1>
      <p> 
        <%= link_to('New Business', new_business_path) if can?(:new, Business) %> |
        <%= link_to('Less Active', less_active_businesses_path) if can?(:new, Business) %> 
      </p>
      <div class="panel">
        <div class="panel-content">
          <div class="table-responsive">
            <table class="table table-striped table-hover">
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Category</th>
                  <th>Contact</th>
                  <th>Telephone</th>
                  <th>Zone</th>
                  <%- if can?(:edit, Business) -%>
                    <th>Actions</th>
                  <%- end -%>
                </tr>
              </thead>
              <tbody>
                <% @businesses.each do |business| %>
                  <tr>
                    <td><%= business.name %></td>
                    <td><%= business.category %></td>
                    <td><%= business.contact %></td>
                    <td><%= business.telephone %></td>
                    <td><%= business.zone %></td>
                    <%- if can?(:edit, Business) -%>
                      <td>
                        <%= link_to 'Show', business %>
                        <%= link_to 'Edit', edit_business_path(business) %>
                        <%= link_to('Destroy', business, method: :delete, data: { confirm: 'Are you sure?' }) if can?(:destroy, Business)%>
                      </td>
                    <%- end -%>
                  </tr>
              <% end %>
              </tbody>
            </table>
            <%= paginate @businesses -%>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>