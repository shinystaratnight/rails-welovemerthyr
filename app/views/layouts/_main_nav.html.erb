<div class="navbar navbar-fixed-top navbar-default">
  <div class="container">
    <div class="navbar-header">
      <%= link_to root_path, class: 'navbar-brand' do -%>
        We Love Merthyr
      <%- end -%>
    </div>

    <div class="navbar-collapse collapse navbar-responsive-collapse">
      <ul class="nav navbar-nav">
        <%- if can?(:read, Business) -%>
          <li class=""><%= link_to 'Businesses', businesses_path -%></li>
        <%- end -%>
        <%- if can?(:read, Event) -%>
          <li class=""><%= link_to 'Events', events_path -%></li>
        <%- end -%>
        <%- if can?(:read, Page) -%>
          <li class=""><%= link_to 'Pages', pages_path -%></li>
        <%- end -%>
        <%- if can?(:read, PageTemplate) -%>
          <li class=""><%= link_to 'Templates', page_templates_path -%></li>
        <%- end -%>
        <%- if can?(:read, Post) -%>
          <li class=""><%= link_to 'Posts', posts_path -%></li>
        <%- end -%>
        <%- if can?(:read, Deal) -%>
          <li class=""><%= link_to 'Deals', deals_path -%></li>
        <%- end -%>
      </ul>

      <form class="navbar-form navbar-left">
        <input class="form-control col-lg-8" type="text" placeholder="Search">
      </form>

      <ul class="nav navbar-nav navbar-right">
        <%- if user_signed_in? -%>
          <li> <%= link_to current_user.email, '#' -%> </li>
          <li> <%= link_to 'Log out', destroy_user_session_path, method: :delete -%> </li>
        <%- else -%>
          <li> <%= link_to 'Log in', new_user_session_path -%> </li>
          <li> <%= link_to 'Sign up', new_user_registration_path -%> </li>
        <%- end -%>
      </ul>
    </div>
  </div>
</div>
