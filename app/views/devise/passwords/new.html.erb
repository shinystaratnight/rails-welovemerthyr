<div class="row">
  <div class="col-lg-6 col-lg-offset-3">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">Forgot your password?</h3>
      </div>

      <div class="panel-body">
        <%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }, html: { class: 'form-horizontal' }, defaults: { input_html: { class: 'form-control' }}) do |f| %>
          <%#= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :email, :required => true, :autofocus => true %>
          </div>

          <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
              <%= f.button :submit, "Send me reset password instructions", class: 'btn-primary' %>
              <br />
              <%= render "devise/shared/links" %>
            </div>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</div>

