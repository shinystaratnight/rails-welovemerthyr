<h1>Listing posts</h1>

<table class="table table-condensed table-bordered table-hover table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Status</th>
      <th>Published date</th>
      <%- if can?(:edit, Post) -%>
        <th>Actions</th>
      <%- end -%>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= post.status %></td>
        <td><%= post.published_date %></td>
        <%- if can?(:edit, Post) -%>
          <td>
            <%= link_to 'Show', post %>
            <%= link_to 'Edit', edit_post_path(post) %>
            <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        <%- end -%>
      </tr>
    <% end %>
  </tbody>
</table>

<br />

<%= link_to('New Post', new_post_path) if can?(:new, Post) %>
