<div class="row">
  <div class="well col-lg-8">
    <%= simple_form_for @deal, html: { class: 'form-horizontal'}, defaults: { input_html: { class: 'form-control' }} do |f| %>
      <div class="form-inputs">
        <%= f.input :title %>
        <%= f.input :business_id, collection: Business.all, include_blank: false, selected: business_id -%>
        <%= f.input :description, as: :ckeditor, input_html: { ckeditor: { toolbar: 'Full' }} %>

        <%- if @deal.image.present? -%>
          <div class="form-group">
            <label class="col-lg-2 control-label"></label>
            <div class="col-lg-10">
              <%= image_tag @deal.image_url -%>
            </div>
          </div>

          <div class='form-group'>
            <label class="col-lg-2 control-label" for="deal_remove_image"></label>
            <div class="col-lg-10">
              <div class="checkbox">
                <input type="checkbox" id="deal_remove_image" name="deal[remove_image]" class="boolean optional" value="1" />
                <label for="deal_remove_image">Remove image</label>
              </div>
            </div>
          </div>
        <%- end -%>

        <%= f.input :image %>

        <%= f.input :start_date, as: :date, input_html: { class: 'custom_datetime form-control' }, use_short_month: true, order: [:day, :month, :year] -%>
        <%= f.input :end_date, as: :date, input_html: { class: 'custom_datetime form-control' }, use_short_month: true, order: [:day, :month, :year] -%>
        <%= f.input :status, collection: Deal::STATUSES, include_blank: false %>
      </div>

      <div class="form-group">
        <div class="col-lg-10 col-lg-offset-2">
          <%= f.button :submit, class: 'btn-primary' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
